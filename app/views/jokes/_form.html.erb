<%= form_for(@joke) do |f| %>
  <% if @joke.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@joke.errors.count, "error") %> prohibited this joke from being saved:</h2>

      <ul>
      <% @joke.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>  
    <%= f.label :name %><br />  
    <%= f.text_field :name %>  
  </p>  
  <p>  
    <%= f.label :text %><br />  
    <%= f.text_area :bodyText, class: "form-control terryArea" %>  
  </p>  
  <p>  
    <%= f.label :score %><br />  
    <%= f.text_field :score %>  
  </p>  
  <p>  
    <%= f.label :length %><br />  
    <%= f.text_field :minutes_length %> <%= f.label :minutes %>
    <%= f.text_field :seconds_length %> <%= f.label :seconds %>
  </p>  
  <p>  
    <%= f.label "Written On" %><br />  
    <%= f.date_field(:write_date) %>
  </p>  

  <div class="actions">
    <%= f.submit "Create Joke", class: "btn btn-primary" %>
  </div>

<% end %>
