<div class="page-header">
  <h1><%=t '.title', :default => "Sets" %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @setrecord.name %></dd>
  <dt>Jokes</dt>
  <dd><%= turnJokesArrayIntoStringWithNewLines(@setrecord.jokes) %></dd>
  <dt>Created At</dt>
  <dd><%= @setrecord.createDate %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              setrecords_path, :class => 'btn btn-primary'  %>
<!-- <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_setrecord_path(@setrecord), :class => 'btn btn-default' %> -->
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              setrecord_path(@setrecord),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
