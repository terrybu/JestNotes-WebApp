 <% @page_title = "Sets" %>

<h1><% if @current_user != nil %>Hi, <%= @current_user.username %>,<% end %> Here's your sets!</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Jokes</th>
      <th>Created At</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @setrecords.each do |setrecord| %>
      <tr>
        <td><%= link_to setrecord.name, setrecord_path(setrecord) %></td>
        <td><%= turnJokesArrayIntoOrderedString(setrecord.jokes) %></td>
        <td><%= setrecord.createDate %></td>
        <td>
        <%= link_to t('.show'), setrecord_path(setrecord), :class => 'btn btn-xs btn-primary' %>

         <!-- <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_setrecord_path(setrecord), :class => 'btn btn-default btn-xs' %> -->
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      setrecord_path(setrecord),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

